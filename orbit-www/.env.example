NEXT_PUBLIC_GITHUB_APP_NAME="Orbit IDP"

DATABASE_URI=mongodb://127.0.0.1:27017/orbit-www
PAYLOAD_SECRET=payload_secret
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Added by Payload

GITHUB_APP_ID=<your_app_id>
GITHUB_APP_CLIENT_ID=<your_client_id>
GITHUB_APP_CLIENT_SECRET=<your_client_secret>
GITHUB_APP_WEBHOOK_SECRET=<your_webhook_secret>
# Encryption key for GitHub installation tokens (32 bytes base64 encoded)
ENCRYPTION_KEY=<your_encryption_key>

# Internal API authentication (shared with Temporal worker)
ORBIT_INTERNAL_API_KEY=your-secure-api-key-here

# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
# The "from" email address - must be a verified domain in Resend
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Bifrost Gateway Admin API
# URL of the Bifrost admin gRPC service
BIFROST_ADMIN_URL=http://localhost:50060

# Documentation Site (optional)
# Set this to the URL of your orbit-docs instance to show "Docs" links in the UI.
# Leave empty or unset to hide documentation links.
NEXT_PUBLIC_DOCS_URL=http://localhost:3001